{
    "name": "cirri",
    "version": "0.0.12-beta.1",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "build": "NODE_OPTIONS=--max_old_space_size=8192 tsc -p tsconfig.json",
        "format": "prettier --write \"**/*.ts\"",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "bumpVersion:main": "standard-version --commit-all --message 'chore(production): %s\n\n[skip main-ci]' --no-verify",
        "bumpVersion:release": "standard-version --commit-all --message 'chore(release): %s\n\n[skip release-ci]' --no-verify --prerelease beta",
        "bumpVersion:main:dry": "standard-version --commit-all --message 'chore(production): %s\n\n[skip main-ci]' --no-verify --dry-run",
        "bumpVersion:release:dry": "standard-version --commit-all --message 'chore(release): %s\n\n[skip release-ci]' --no-verify --prerelease beta --dry-run"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/17s1c/cirrus.git"
    },
    "bugs": {
        "url": "https://github.com/17s1c/cirrus/issues"
    },
    "homepage": "https://github.com/17s1c/cirrus#readme",
    "keywords": [],
    "author": "zizhenli",
    "license": "Apache-2.0",
    "files": [
        "package.json",
        "lib"
    ],
    "dependencies": {
        "body-parser": "^1.19.0",
        "class-transformer": "^0.4.0",
        "class-validator": "^0.13.1",
        "cors": "^2.8.5",
        "esprima": "^4.0.1",
        "express": "^4.17.1",
        "http-errors": "^1.8.0",
        "inversify": "5.1.1",
        "lodash": "^4.17.19",
        "mysql2": "^2.2.5",
        "nodemon": "^1.19.4",
        "pino": "^6.13.1",
        "pino-pretty": "^6.0.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "^0.2.37",
        "uniqid": "^5.0.3"
    },
    "devDependencies": {
        "@types/cors": "^2.8.12",
        "@types/esprima": "^4.0.2",
        "@types/express": "^4.17.1",
        "@types/inversify": "^2.0.33",
        "@types/jest": "26.0.22",
        "@types/joi": "^14.3.1",
        "@types/lodash": "^4.14.172",
        "@types/node": "^12.11.1",
        "@types/pino": "^6.3.11",
        "@types/uniqid": "^4.1.3",
        "jest": "26.6.3",
        "prettier": "^1.18.2",
        "shelljs": "^0.8.4",
        "standard-version": "^8.0.1",
        "ts-jest": "26.5.4",
        "ts-node": "^8.4.1",
        "tslint": "^5.20.0",
        "typescript": "^3.6.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "packages",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
